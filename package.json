{
  "name": "miniplex",
  "author": {
    "name": "Hendrik Mans",
    "email": "hendrik@mans.de",
    "url": "https://hendrik.mans.de"
  },
  "description": "A developer-friendly entity management system for games and similarly demanding applications, based on ECS architecture.",
  "homepage": "https://github.com/hmans/miniplex",
  "keywords": [
    "gamedev",
    "ecs",
    "react",
    "entity-component-system",
    "state",
    "state-management",
    "hooks"
  ],
  "sideEffects": false,
  "version": "0.7.0",
  "main": "dist/miniplex.cjs.js",
  "module": "dist/miniplex.esm.js",
  "types": "dist/miniplex.cjs.d.ts",
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "react.tsx"
    ]
  },
  "files": [
    "dist/**",
    "react/**",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "preconstruct watch",
    "build": "preconstruct build",
    "release": "yarn ci && yarn publish",
    "test": "jest",
    "ci": "yarn clean & yarn build && yarn test",
    "docs": "typedoc src/index.ts"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@preconstruct/cli": "^2.1.5",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.13",
    "jest": "^27.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.0.3",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      [
        "@babel/preset-typescript",
        {
          "isTSX": true,
          "allExtensions": true
        }
      ]
    ]
  }
}
